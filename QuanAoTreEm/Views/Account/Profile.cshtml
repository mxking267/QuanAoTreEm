@model QuanAoTreEm.Models.Account

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="vh-100" style="background-color: #f5f5fa">
    <h4>Thông tin tài khoản</h4>
    <form class="form-control border-0" style="border-radius: 10px">
        <div class="row p-3">
            <div class="col-3 border-end border-1 border-dark me-5 d-flex flex-column" style="gap: 15px">
                <img style="width: 150px; height: 150px; border-radius: 50%; object-fit:cover; margin: 0 auto" src="~/Content/Assets/Images/Users/@Model.ProfileImage" />
                <a href="@Url.Action("Address", "Account")" class="btn btn-primary">Đơn hàng của tôi</a>
                <a class="btn btn-primary">Quản lí địa chỉ</a>
            </div>
            <div class="col" style="width: max-content">
                @*Họ tên*@
                <div class="row g-3 align-items-center mb-5">
                    <div class="col-2">
                        <label for="fullName" class="col-form-label">Họ và tên</label>
                    </div>
                    <div class="col">
                        <input type="text" id="fullName" class="form-control w-100" aria-describedby="fullNameHelp" value="@Model.FullName">
                    </div>
                </div>
                @*Số điện thoại*@
                <div class="row g-3 align-items-center mb-5">
                    <div class="col-2">
                        <label for="phoneNumber" class="col-form-label">Số điện thoại</label>
                    </div>
                    <div class="col">
                        <input type="number" id="phoneNumber" class="form-control" value="@Model.PhoneNumber">
                    </div>
                </div>

                @*Địa chỉ email*@
                <div class="row g-3 align-items-center mb-5">
                    <div class="col-2">
                        <label for="email" class="col-form-label">Email</label>
                    </div>
                    <div class="col">
                        <input type="email" id="email" class="form-control" value="@Model.Email">
                    </div>
                </div>

                @*Ngày sinh*@
                <div class="row g-3 align-items-center mb-5">
                    <div class="col-2">
                        <label for="dateOfBirth" class="col-form-label">Ngày sinh</label>
                    </div>
                    <div class="col">
                        <input type="date" id="dateOfBirth" class="form-control" value="@Model.DateOfBirth">
                    </div>
                </div>

                @*Giới tính*@
                <div class="row mb-3">
                    <div class="col-2">
                        <label for="" class="form-label">Giới tính</label>
                    </div>
                    <div class="col">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="gender_male" value="Nam">
                            <label class="form-check-label" for="gender_male">Nam</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="Nữ">
                            <label class="form-check-label" for="gender_female">Nữ</label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                <a href="@Url.Action("SignOut", "Account")" class="btn">Đăng xuất</a>
            </div>

        </div>
    </form>
</div>


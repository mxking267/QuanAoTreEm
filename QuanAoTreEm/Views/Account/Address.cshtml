
@{
    ViewBag.Title = "Adress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper" style="background-color: #f5f5fa;padding: 20px; height: 100vh">
    <h2>Sổ địa chỉ</h2>
    <a href="@Url.Action("AddAddress","Account")" style="display:block;width: 100%; padding: 10px; background: white; border: 0; border-radius: 5px; text-decoration: none; color: blue; text-align: center">Thêm địa chỉ mới</a>
    <div class="d-flex mt-3" style="background: white; border-radius: 5px; height: fit-content; padding: 10px 20px">
